define Map({(int,int)} pairs) as forall [ int i1, int i2, int v1, int v2 :
    (i1, v1) âˆˆ pairs &&
    (i2, v2) âˆˆ pairs
    ==>
      i1 != i2 ||
      v1 == v2
  ]

define Bijection({int,int} pairs) as
       forall [ int i1, int i2, int v1, int v2 :
    (i1, v1) âˆˆ pairs &&
    (i2, v2) âˆˆ pairs && (i1,v1) != (i2,v2)
    ==>
      (i1 != i2 && v1 != v2)
  ]

assert forall [ {int,int} pairs : 
       Bijection(pairs) ==> Map(pairs)
]


