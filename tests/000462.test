type nat is (int x) where x >= 0

// =======================================
// Card Definition
// =======================================

// Suites
final int HEARTS = 1
final int CLUBS = 2
final int DIAMONDS = 3
final int SPADES = 4

// Ordinals
final int TWO = 2
final int THREE = 3
final int FOUR = 4
final int FIVE = 5
final int SIX = 6
final int SEVEN = 7
final int EIGHT = 8
final int NINE = 9
final int TEN = 10
final int JACK = 11
final int QUEEN = 12
final int KING = 13
final int ACE = 14

type Card is {
    int suite,
    int ordinal
}
// Suite between hearts and clubs
where HEARTS <= suite && suite <= SPADES
// Ordinal between 2 and ACE (high)
where 2 <= ordinal && ordinal <= ACE

// Define a "comparator" for cards
property lessThan(Card c1, Card c2) -> (bool r):
    (c1.suite == c2.suite && c1.ordinal < c2.ordinal) ||
    (c1.suite != c2.suite && c1.suite < c2.suite)

property sorted(Card[] cards) -> (bool r):
    |cards| == 0 || all { i in 1..|cards| | lessThan(cards[i-1],cards[i]) }

